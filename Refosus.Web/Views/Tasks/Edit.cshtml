@{
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}
<div class="container col-md-11">
    <br />
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home/Menu">Nativa</a></li>
            <li class="breadcrumb-item"><a href="/Tracings">Seguimientos</a></li>
            <li class="breadcrumb-item"><a href="/tasks">Tareas</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>
    <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-primary" role="button">Atras</a>
    <div class="card mt-2">
        <div class="card-header">
            <div class="card-tools">
                <button type="button" class="btn btn-primary-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
            </div>
            <center><h3>Editar</h3></center>
        </div>
        <div class="card-body">
            <input type="hidden" id="editId" key="@ViewBag.Id" />
            <div class="row">
                <div class="col-md-12">
                    <label>Seguimiento</label>
                    <select id="tracingsEdit" class="form-control"></select>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label>Fecha limite</label>
                    <input type="date" id="deadLineEdit" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label>Tipo de tarea</label>
                    <select id="typesTasksEdit" class="form-control"></select>
                </div>
                <div class="col-md-3">
                    <label>Fecha de creación</label>
                    <input id="createdEdit" class="form-control" readonly />
                </div>
                <div class="col-md-3">
                    <label>Fecha de ultima actualización</label>
                    <input id="updatedEdit" class="form-control" readonly />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <label>Estado</label>
                    <select id="statusEdit" class="form-control" >
                        <option value="">-- ESTADO --</option>
                        <option value="1">Pendiente</option>
                        <option value="2">Finalizado</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Responsable</label>
                    <select id="responsableEdit" class="form-control">
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Descripción</label>
                    <textarea id="descriptionEdit" class="form-control"></textarea>
                </div>
            </div>
            <hr />
            <button id="editTask" class="btn btn-outline-success" >Guardar cambios</button>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Fetch.js"></script>
    <script src="~/js/Tasks.js"></script>
}