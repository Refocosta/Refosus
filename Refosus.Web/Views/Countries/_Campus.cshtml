@model Refosus.Web.Models.CampusViewModel

<div class="form-group col-sm-12">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group col-sm-12">
    <label asp-for="Address" class="control-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group col-sm-12">
    <label asp-for="CreateDateLocal" class="control-label"></label>
    <input asp-for="CreateDateLocal" class="form-control" type="date" disabled/>
    <span asp-validation-for="CreateDateLocal" class="text-danger" ></span>
</div>
<div class="form-group col-sm-12">
    <div class="custom-control custom-checkbox">
        <input asp-for="IsActive" type="checkbox" class="custom-control-input" />
        <label asp-for="IsActive" class="custom-control-label"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
</div>