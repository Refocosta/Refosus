
@{
    ViewData["Title"] = "DetailsArticle";
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Detalles</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <section class="col col-lg-12 connectedSortable">
                <div class="card card-primary">
                    <div class="card-header">
                        <a class="card-title">Detalles del articulo</a>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col col-md-12">
                            <div class="row">
                                <div class="form-group col col-sd-4">
                                    <label class="control-label">Codigo SAP</label>
                                    <input class="form-control" value="" disabled>
                                </div>
                                <div class="form-group col col-sd-4">
                                    <label class="control-label">Nombre</label>
                                    <input class="form-control" value="" disabled>
                                </div>
                                <div class="form-group col col-sd-4">
                                    <label class="control-label">Ultimo Costo Unidad</label>
                                    <input class="form-control" value="" disabled>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col col-sd-4">
                                    <label class="control-label">Medida</label>
                                    <input class="form-control" value="" disabled>
                                </div>
                                <div class="form-group col col-sd-4">
                                    <label class="control-label">Unidad</label>
                                    <input class="form-control" value="" disabled>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer ">
                        <div class="col col-12">
                            <a asp-action="EditShopping" asp-route-id="1" class="btn btn-warning col-sm-2">Editar</a>
                            <a asp-action="Index" class="btn btn-danger col-sm-2 ">Cancelar</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }