@model Refosus.Web.Models.MenuViewModel

    <div class="form-group col-sm-12">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label asp-for="Controller" class="control-label"></label>
        <input asp-for="Controller" class="form-control" />
        <span asp-validation-for="Controller" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label asp-for="Action" class="control-label"></label>
        <input asp-for="Action" class="form-control" />
        <span asp-validation-for="Action" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label asp-for="LogoFile" class="control-label"></label>
        <input asp-for="LogoFile" type="file" class="form-control" />
        <span asp-validation-for="LogoFile" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <div class="custom-control custom-checkbox">
            <input asp-for="IsActive" type="checkbox" class="custom-control-input" />
            <label asp-for="IsActive" class="custom-control-label"></label>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-sm-12">
        <label asp-for="MenuId" class="control-label"></label>
        <select asp-for="MenuId" asp-items="Model.Menus" class="form-control"></select>
        <span asp-validation-for="MenuId" class="text-danger"></span>
    </div>

