@model Refosus.Web.Data.Entities.NewEntity
@{
    ViewData["Title"] = "DetailsNew";
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1>Detalles</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <section class="col-lg-12 connectedSortable">
                <div class="card card-primary">
                    <div class="card-header">
                        <a class="card-title">Detalles de la Noticia</a>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-7">
                                <div class="form-group col-sd-9">
                                    <label class="control-label">@Html.DisplayNameFor(model => model.Colour)</label>
                                    <input class="form-control" value="  @Html.DisplayFor(model => model.Colour)" disabled>
                                </div>
                                <div class="form-group col-sd-9">
                                    <label class="control-label">@Html.DisplayNameFor(model => model.Size)</label>
                                    <input class="form-control" value="  @Html.DisplayFor(model => model.Size)" disabled>
                                </div>
                                <div class="form-group col-sd-9">
                                    <label class="control-label">@Html.DisplayNameFor(model => model.Title)</label>
                                    <input class="form-control" value="  @Html.DisplayFor(model => model.Title)" disabled>
                                </div>
                                <div class="form-group col-sd-9">
                                    <label class="control-label">@Html.DisplayNameFor(model => model.Content)</label>
                                    <textarea class="form-control"  disabled>@Html.DisplayFor(model => model.Content)</textarea>
                                </div>

                                <div class="form-group col-sd-9">
                                    <label class="control-label">@Html.DisplayNameFor(model => model.Public)</label>
                                    @Html.DisplayFor(model => model.Public, new { @class = "custom-control-input" })
                                </div>
                            </div>
                            <div class="col-sm-4">
                                @if (!string.IsNullOrEmpty(Model.LogoPath))
                                {
                                    <br />
                                    <br />
                                    <img src="@Url.Content(Model.LogoPath)" alt="Image" class="img-fluid" />
                                }
                            </div>
                        </div>
                        <div class="card-footer ">
                            <a asp-action="EditNew" asp-route-id="@Model.Id" class="btn btn-warning col-sm-2"> Editar</a>
                            <a asp-action="IndexNews" class="btn btn-success col-sm-2 ">Listado</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}



