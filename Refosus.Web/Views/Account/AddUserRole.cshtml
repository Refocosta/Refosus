@model Refosus.Web.Models.UserRolesViewModel
@{
    ViewData["Title"] = "AddUserRoles";
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <section class="col-lg-12 connectedSortable">
                <form asp-action="AddUserRole" enctype="multipart/form-data">
                    <div class="card card-primary">
                        <div class="card-header">
                            <a class="card-title">Agregar Roles a @Model.User.FullName</a>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <input type="hidden" asp-for="userId" />
                                <div class="col-sm-7">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group col-sm-12">
                                        <label asp-for="rolesId" class="control-label"></label>
                                        <select asp-for="rolesId" asp-items="Model.ListRoles" class="form-control"></select>
                                        <span asp-validation-for="rolesId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <input type="submit" value="Crear" class="btn btn-primary col-sm-2" />
                            <a asp-action="DetailsUser" asp-route-id="@Model.userId" class="btn btn-success col-sm-2 ">Volver</a>
                        </div>

                    </div>
                </form>
            </section>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


