
@model List<Refosus.Web.Models.MessageAutorizeViewModel>
@{
    ViewData["Title"] = "MessageAuthorize";
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <section class="col-lg-12 connectedSortable">
                <form asp-action="MessageAuthorize" enctype="multipart/form-data">
                    <div class="card card-green">
                        <div class="card-header">
                            <div class="card-title col-sm-3">
                                Autorizar Facturacion
                            </div>
                            <div class="card-tools">
                                <button type="submit" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 table-responsive">
                                    <div class="row">
                                        <div class="col">
                                            <button type="button" class="btn btn-warning AuthorizeItem col-sm-2" id="btnAuthorize" data-toggle="modal" data-target="#MessageAuthorizeDialog">Autorizar</button>
                                        </div>
                                        @if (Model.Count > 0)
                                        {
                                            <div class="col ">
                                                <label asp-for="@Model[0].UserId" class="control-label"></label>
                                                <select asp-for="@Model[0].UserId" asp-items="Model[0].Users" class="form-control"></select>
                                                <span asp-validation-for="@Model[0].UserId" class="text-danger"></span>
                                            </div>
                                        }
                                    </div>

                                    <br />
                                    <table class="table table-hover table-striped display" id="tblDatos">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Autorizar
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model[0].Reference)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model[0].Sender)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model[0].Ceco)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model[0].Value)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model[0].Observation)
                                                </th>
                                                <td>
                                                    Detalles
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                for (var i = 0; i < Model.Count(); i++)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.HiddenFor(m => Model[i].Id)
                                                            @Html.CheckBoxFor(m => Model[i].Auto)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model[i].Reference)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model[i].Sender)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model[i].Ceco.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model[i].Value)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model[i].Observation)
                                                        </td>
                                                        <td>
                                                            @*<button type="button" onclick="ItempTemp(@Model[i].Id)" class="btn btn-warning addArticle" data-toggle="modal" data-target="#addArticle"><i class="oi oi-magnifying-glass" style="color:white"></i></button>*@
                                                            <button type="button" onclick="CargarDatos(@Model[i].Id)" class="btn btn-info DetallesModal" data-toggle="modal" data-target="#DetallesModal"><i class="oi oi-magnifying-glass" style="color:white"></i></button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <partial name="_MessageAuthorizeDialog" />
                    <partial name="_MessageAuthorizeDetallesDialog" />
                </form>
            </section>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblDatos').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "infoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sSearch": "Buscar:",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "sProcessing": "Procesando...",
                }
            });
        });
    </script>
}







