@model Refosus.Web.Models.MessageViewModel
@{
    ViewData["Title"] = "CreateMessageAsync";
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <section class="col col-lg-12 connectedSortable">
                <form asp-action="CreateMessage" enctype="multipart/form-data">
                    <div class="card card-primary">
                        <div class="card-header">
                            <a class="card-title">Crear Mensajeria</a>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col col-sm-12">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row col-sm-12">
                                        <div class="col col-sm-4">
                                            <label asp-for="CompanyId" class="control-label"></label>
                                            <select asp-for="CompanyId" asp-items="Model.Companies" class="form-control"></select>
                                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                                        </div>
                                        <div class="col col-sm-4">
                                            <label asp-for="Sender" class="control-label"></label>
                                            <input asp-for="Sender" class="form-control" />
                                            <span asp-validation-for="Sender" class="text-danger"></span>
                                        </div>
                                        <div class="col col-sm-4">
                                            <label asp-for="Reference" class="control-label"></label>
                                            <input asp-for="Reference" class="form-control" />
                                            <span asp-validation-for="Reference" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-sm-4">
                                            <label asp-for="TypeId" class="control-label"></label>
                                            <select asp-for="TypeId" asp-items="Model.MessageType" class="form-control"></select>
                                            <span asp-validation-for="TypeId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label asp-for="CreateUser" class="control-label"></label>
                                            <select asp-for="CreateUser" asp-items="Model.Users" class="form-control"></select>
                                            <span asp-validation-for="CreateUser" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label asp-for="File" class="control-label"></label>
                                            <input asp-for="File" type="file" multiple="multiple" class="form-control" />
                                            <span asp-validation-for="File" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm-12">
                                            <label asp-for="Transaction.Observation" class="control-label"></label>
                                            <textarea asp-for="Transaction.Observation" class="form-control"></textarea>
                                            <span asp-validation-for="Transaction.Observation" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <button type="submit" id="btnCreate" class="btn btn-primary col-sm-2" data-toggle="modal" data-target="#SpinnerDialog">Crear</button>
                            <a asp-action="Index" class="btn btn-danger col-sm-2 ">Cancelar</a>
                        </div>
                    </div>
                    <partial name="_Spinner" />
                </form>
            </section>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}