@model IEnumerable<Refosus.Web.Data.Entities.MessageEntity>
@{
    ViewData["Title"] = "IndexMeHistory";
    Layout = "~/Views/Shared/_Refosus1.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1>Historico</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <section class="col-lg-12 connectedSortable">
                <div class="card card-green">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 table-responsive">
                                <table class="table table-hover table-striped display" id="tblDatos">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.UpdateDateLocal)
                                            </th>
                                            <th>
                                                Consecutivo
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Sender)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Reference)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Type.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CreateDateLocal)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.State.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.UserSender)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.User)
                                            </th>
                                            <th>
                                                Adjuntos
                                            </th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UpdateDateLocal)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Sender)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Reference)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Type.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreateDateLocal)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.State.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UserSender.FullName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MessageFiles.Count)
                                                </td>
                                                <td>
                                                    <a asp-action="DetailsMeHistoryMessage" asp-route-id="@item.Id" class="btn btn-info"><i class="oi oi-list" style="color:white"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblDatos').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "infoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sSearch": "Buscar:",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "sProcessing": "Procesando...",
                }
            });
        });
    </script>
}