@model Refosus.Web.Data.Entities.MessageEntity
@*Tabla de Adjuntos*@
<div class="row">
    <section class="col-lg-12 connectedSortable">
        <div class="card card-danger">
            <div class="card-header">
                <a class="card-title">Adjuntos</a>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <table class="table table-hover table-striped display" id="tblDatos1">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MessageFiles)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <a href="@Url.Content(item.FilePath)" download="@item.Name" class="btn btn-info">
                                                <i class="oi oi-cloud-download style="color:white"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@*Tabla de vistos buenos*@
@if (Model.Type.Name == "Factura")
{
    <div class="row">
        <section class="col-lg-12 connectedSortable">
            <div class="card card-warning">
                <div class="card-header">
                    <a class="card-title">Vistos Buenos</a>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table class="table table-hover table-striped display" id="tblDatos">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Checks.FirstOrDefault().User)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Checks.FirstOrDefault().DateAutLocal)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Checks.OrderBy(d => d.DateAut))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateAutLocal)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}